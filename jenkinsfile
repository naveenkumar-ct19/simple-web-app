pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                url: 'https://github.com/YOURNAME/simple-web.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t YOUR_DOCKER_USERNAME/simple-web:latest .'
            }
        }

        stage('Push Docker Image') {
            steps {
                sh 'docker login -u YOUR_DOCKER_USERNAME -p $DOCKER_PASSWORD'
                sh 'docker push YOUR_DOCKER_USERNAME/simple-web:latest'
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh 'kubectl apply -f deployment.yaml'
            }
        }
    }
}
